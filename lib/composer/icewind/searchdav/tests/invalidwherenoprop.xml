<?xml version="1.0"?>
<d:searchrequest xmlns:d="DAV:" xmlns:oc="http://ns.nextcloud.com">
    <d:basicsearch>
        <d:select>
            <d:prop>
                <d:getcontentlength/>
            </d:prop>
        </d:select>
        <d:from>
            <d:scope>
                <d:href>/container1/</d:href>
                <d:depth>infinity</d:depth>
            </d:scope>
        </d:from>
        <d:where>
            <d:gt>
                <d:prop />
                <d:literal />
            </d:gt>
        </d:where>
        <d:orderby>
            <d:order>
                <d:prop>
                    <d:getcontentlength/>
                </d:prop>
                <d:ascending/>
            </d:order>
        </d:orderby>
    </d:basicsearch>
</d:searchrequest>